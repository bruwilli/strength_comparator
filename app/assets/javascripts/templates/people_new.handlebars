<div class="container">
	<div class="row">
		<div class="col-md-12">
			<div class="form-group">
				<label for="first-name-input">First name</label>
				{{input value=firstName id="first-name-input"}}
			</div>
			<div class="form-group">
				<label for="last-name-input">Last name</label>
				{{input value=lastName id="last-name-input"}}
			</div>
			<div class="row">
		    <div class="col-md-3">
		    	<ul>
		    		{{#each strengthIndex in strengthIndices}}
		    		  {{strength strengthIndex}}
		    		{{/each}}
		    	</ul>
		    </div>
		    <div class="col-md-9">
					<div class="form-group">
						<label for="strength-finder-data">Strengths finder data:</label>
						{{textarea value=strengthFinderData id="strength-finder-data"}}
					</div>
				</div>
			</div>
		</div>
		<button {{bind-attr class=":btn :btn-primary valid::disabled"}}>Submit</button>
	</div>
</div>
